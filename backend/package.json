{
  "name": "footprint-insight-engine",
  "version": "2.0.0",
  "description": "Carbon Footprint Tracker with AI-Powered Insights, Weekly Goals, and Real-time Analytics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "echo \"Linting not configured\" && exit 0",
    "build": "echo \"Build step for production\" && exit 0",
    "postinstall": "echo \"Dependencies installed successfully\"",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "logs": "tail -f logs/app.log",
    "db:seed": "node scripts/seed-data.js"
  },
  "keywords": [
    "carbon-footprint",
    "sustainability",
    "environment",
    "tracking",
    "insights",
    "goals",
    "analytics",
    "real-time",
    "websockets",
    "express",
    "mongodb",
    "nodejs"
  ],
  "author": {
    "name": "Joseph Jacob Malete",
    "email": "josephmalete75@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/footprint-insight-engine.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/footprint-insight-engine/issues"
  },
  "homepage": "https://github.com/yourusername/footprint-insight-engine#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.4",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "validator": "^13.11.0",
    "moment": "^2.29.4",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "port": 3000,
    "mongoUrl": "mongodb://localhost:27017/carbon-footprint"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "logs/*",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,html,css"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!public/**"
    ]
  }
}